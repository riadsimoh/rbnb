{% extends 'base.html.twig' %}

{% block title %}Nos annonces!
{% endblock %}

{% block body %}

	<div class="container">
		<h1 class="my-4">Voici les annonces de nos hôtes</h1>

		<div class=" row">

			{% for ad in ads %}
				{% set url =  path('ad_show', { slug: ad.slug}) %}
				<div class="col-sm-4 mb-3">
					<div class="card">
						<div class="card-header text-center">
							<p>{{ad.rooms }}chambre,
								<strong>Prix :
									{{ad.price}}
									euro / nuit</strong>
								<br>
								<small>Pas encore noté</small>
							</p>

						</div>
						<a href="{{ url }}">
							<img class="card-img-top" src={{ad.coverImage}} alt="Card image"></a>

						<div class="card-body">
							<a href="{{ url }}">
								<h4 class="card-title">{{ad.title}}</h4>
							</a>

							<p class="card-text">{{ad.introduction}}</p>
							<a href="{{ url }}" class="btn btn-primary">En savoir plus</a>
						</div>
					</div>

				</div>
			{% endfor %}


		</div>

	</div>


{% endblock %}
